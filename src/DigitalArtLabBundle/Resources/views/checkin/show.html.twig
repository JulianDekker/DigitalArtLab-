{% extends '::base.html.twig' %}

{% block body -%}
    <h1>checkin</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Timein</th>
                <td>{{ entity.timein|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Timeout</th>
                <td>{{ entity.timeout|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Sessionduration</th>
                <td>{{ entity.sessionduration }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('profile_checkin') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('profile_checkin_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
