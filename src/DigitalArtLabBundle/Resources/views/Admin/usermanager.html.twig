{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Gebruikersbeheer</h1>
    <table>
        <tr>
            <th>Gebruikersnaam</th>
            <th>Volledige naam</th>
            <th>Aanwezig</th>
            <th>actie</th>
        </tr>
        {% for users in users %}
            <tr class="user">
                <td>{{ users.username }}</td>
                <td>{{ users.firstname }} {{ users.lastname }}</td>
                <td>
                {% if users.aanwezig == 1 %}
                    In het lab
                {% elseif users.aanwezig is null or users.aanwezig is empty %}
                    nog niet geweest
                {% elseif users.aanwezig == 0 %}
                    Niet aanwezig
                {% endif %}
                </td>
                <td>
                    <a href="{{ path('checkin', {'username': users.username}) }}">
                    {% if users.aanwezig == 1 %}
                        Afmelden
                    {% elseif users.aanwezig == 0 %}
                        Aanmelden
                     {% endif %}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('fos_user_registration_register') }}">Gebruiker toevoegen</a>
    <a href="{{ path('admin') }}">Terug naar overzicht</a>



{% endblock %}